<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:background="@drawable/order_ask"
        android:padding="15dp"
        android:id="@+id/order_container" xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
                android:text="/ BTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:id="@+id/order_currencyCounter"
                app:layout_constraintStart_toEndOf="@+id/order_currencyBase"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/order_currencyBase"/>
        <TextView
                android:id="@+id/order_currencyBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LTC"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Amount:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorTextSecondary" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/order_currencyCounter" android:layout_marginStart="24dp"/>
        <TextView
                android:text="Price:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@color/colorTextSecondary"
                app:layout_constraintStart_toStartOf="@+id/textView2"/>
        <TextView
                android:text="15.27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_amount" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp" android:textColor="@color/colorTextPrimary"/>
        <TextView
                android:text="0.00005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_price" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/order_amount"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp" android:textColor="@color/colorTextPrimary"/>
        <TextView
                android:text="Total:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/colorTextSecondary" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView2"/>
        <TextView
                android:text="0.008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_total"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/order_price"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                android:textColor="@color/colorTextPrimary"/>

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/order_animation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_fileName="cancelloading.json"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>


