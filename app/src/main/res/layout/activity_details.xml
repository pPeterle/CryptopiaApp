<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".details.DetailsActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:title=" "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOEDA"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary" android:id="@+id/details_currency_tv"
                tools:layout_editor_absoluteY="15dp" tools:layout_editor_absoluteX="158dp"/>
    </android.support.v7.widget.Toolbar>

    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:background="@color/colorPrimary"
          app:layout_constraintTop_toBottomOf="@+id/details_toolbar" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view3"/>

    <EditText
            android:id="@+id/details_amount_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Amount(BTS)"
            style="@style/EditTextTheme"
            app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            app:layout_constraintStart_toStartOf="@+id/guideline_20"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_counter_amount_tv"/>

    <EditText
            android:id="@+id/details_total_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="Total(BTC)"
            style="@style/EditTextTheme"
            app:layout_constraintStart_toStartOf="@+id/guideline_20"
            app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_btn_75"/>
    <EditText
            android:id="@+id/details_price_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:hint="Price(BTC)"
            style="@style/EditTextTheme"
            app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            app:layout_constraintStart_toStartOf="@+id/guideline_20"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view3"/>

    <Button
            android:id="@+id/details_buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            app:layout_constraintStart_toEndOf="@+id/guideline_20"
            app:layout_constraintEnd_toStartOf="@+id/details_sell_btn" android:background="@drawable/btn_green"
            android:textColor="@color/colorTextPrimary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/details_total_et"/>
    <Button
            android:id="@+id/details_sell_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"
            app:layout_constraintStart_toEndOf="@+id/details_buy_btn"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            android:background="@drawable/btn_red" android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/details_total_et"/>
    <Button
            android:text="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:id="@+id/details_btn_25"
            style="@style/ButtonTheme"
            app:layout_constraintStart_toEndOf="@+id/guideline_20"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/details_btn_50"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_amount_et"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="50%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_btn_50" style="@style/ButtonTheme"
            app:layout_constraintStart_toEndOf="@+id/details_btn_25" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/details_btn_75" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/details_amount_et"/>
    <Button
            android:text="75%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_btn_75" style="@style/ButtonTheme"
            app:layout_constraintStart_toEndOf="@+id/details_btn_50" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/details_btn_100"
            app:layout_constraintTop_toBottomOf="@+id/details_amount_et" android:layout_marginTop="8dp"/>
    <Button
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_btn_100" style="@style/ButtonTheme"
            app:layout_constraintStart_toEndOf="@+id/details_btn_75"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_amount_et"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_20"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_80"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_base_tv" android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/details_counter_amount_tv"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_price_et"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_counter_amount_tv"
            app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            android:textSize="12sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/details_price_et"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_counter_tv" app:layout_constraintStart_toStartOf="@+id/guideline_20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/details_price_et" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_base_amount_tv" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/details_counter_tv" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/details_price_et"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/details_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toBottomOf="@+id/details_sell_btn"
            app:layout_constraintEnd_toStartOf="@+id/guideline_80"
            app:layout_constraintStart_toStartOf="@+id/guideline_20"
    />


</android.support.constraint.ConstraintLayout>